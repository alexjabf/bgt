<h3 style="text-align: center;">Informaci√≥n de Pedido</h3>
<div class="col-md-6">
  <p>
    <strong>No. de Pedido:</strong>
    <%= @order.id %>
  </p>

  <p>
    <strong>Cliente:</strong>
    <%= link_to @order.client.select_display, @order.client, title: @order.client.select_display, id: "underline-link"  %>
  </p>

  <p>
    <strong>Clase de pedido:</strong>
    <%= @order.clase_ped %>
  </p>

  <p>
    <strong>Numero de pedido de cliente:</strong>
    <%= @order.numped_cte %>
  </p>

  <p>
    <strong>Fecha:</strong>
    <%= @order.fecha %>
    <%=  I18n.l @order.fecha, :format => :long if @order.fecha%>
  </p>

  <p>
    <strong>Forma de entrega:</strong>
    <%= @order.forma_entrega %>
  </p>

  <p>
    <strong>Cond pago:</strong>
    <%= @order.cond_pago %>
  </p>

  <p>
    <strong>Moneda:</strong>
    <%= @order.moneda %>
  </p>
</div>
<div class="col-md-6">
  <p>
    <strong>Centro:</strong>
    <%= @order.centro %>
  </p>

  <p>
    <strong>Fecha de entrega:</strong>
    <%=  I18n.l @order.fec_entrega, :format => :long if @order.fec_entrega%>
  </p>

  <p>
    <strong>Flete local:</strong>
    <%= number_to_currency(@order.flete_local, locale: session[:locale]) %>
  </p>

  <p>
    <strong>Tarifa de flete:</strong>
    <%= number_to_currency(@order.tarifa_flete_for, locale: session[:locale]) %>
  </p>

  <p>
    <strong>Registrado:</strong>
    <%=  I18n.l @order.created_at, :format => :long if @order.created_at%>
  </p>

  <p>
    <strong>Actualizado:</strong>
    <%= I18n.l @order.updated_at, :format => :long if @order.updated_at%>
  </p>
</div>
<div class="col-md-12">
  <h3 style="text-align: center;">Detalles de Pedido</h3>


  <div class="col-md-6">

    <p>
      <strong>MATNR:</strong>
      <%= @order.order_detail.matnr %>
    </p>

    <p>
      <strong>Cantidad:</strong>
      <%= @order.order_detail.cantidad %>
    </p>

    <p>
      <strong>Unidad:</strong>
      <%= @order.order_detail.unidad %>
    </p>

    <p>
      <strong>Precio:</strong>
      <%= @order.order_detail.precio %>
    </p>

    <p>
      <strong>Moneda:</strong>
      <%= @order.order_detail.moneda %>
    </p>

    <p>
      <strong>Por UM:</strong>
      <%= @order.order_detail.por_um %>
    </p>

    <p>
      <strong>UM:</strong>
      <%= @order.order_detail.um %>
    </p>
    <p>
      <strong>Descuento 1:</strong>
      <%= @order.order_detail.desc1 %>
    </p>
  </div>
  <div class="col-md-6">
    <p>
      <strong>Descuento 2:</strong>
      <%= @order.order_detail.desc2 %>
    </p>

    <p>
      <strong>Descuento 3:</strong>
      <%= @order.order_detail.desc3 %>
    </p>

    <p>
      <strong>Importe:</strong>
      <%= @order.order_detail.importe %>
    </p>

    <p>
      <strong>Kilos:</strong>
      <%= @order.order_detail.kilos %>
    </p>

    <p>
      <strong>Registrado:</strong>
      <%=  I18n.l @order.order_detail.created_at, :format => :long if @order.order_detail.created_at%>
    </p>

    <p>
      <strong>Actualizado:</strong>
      <%= I18n.l @order.order_detail.updated_at, :format => :long if @order.order_detail.updated_at%>
    </p>
  </div>
</div>
