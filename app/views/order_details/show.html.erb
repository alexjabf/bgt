<div class="col-md-6">
  <p>
    <strong>No. de Pedido:</strong>
    <%= link_to @order_detail.order.id, @order_detail.order, title: @order_detail.order.select_display, id: "underline-link" %>
  </p>

  <p>
    <strong>Cliente:</strong>
    <%= link_to @order_detail.order.client.select_display, @order_detail.order.client, title: @order_detail.order.client.select_display, id: "underline-link" %>
  </p>

  <p>
    <strong>MATNR:</strong>
    <%= @order_detail.matnr %>
  </p>

  <p>
    <strong>Cantidad:</strong>
    <%= @order_detail.cantidad %>
  </p>

  <p>
    <strong>Unidad:</strong>
    <%= @order_detail.unidad %>
  </p>

  <p>
    <strong>Precio:</strong>
    <%= @order_detail.precio %>
  </p>

  <p>
    <strong>Moneda:</strong>
    <%= @order_detail.moneda %>
  </p>

  <p>
    <strong>Por UM:</strong>
    <%= @order_detail.por_um %>
  </p>

  <p>
    <strong>UM:</strong>
    <%= @order_detail.um %>
  </p>
</div>
<div class="col-md-6">
  <p>
    <strong>Descuento 1:</strong>
    <%= @order_detail.desc1 %>
  </p>

  <p>
    <strong>Descuento 2:</strong>
    <%= @order_detail.desc2 %>
  </p>

  <p>
    <strong>Descuento 3:</strong>
    <%= @order_detail.desc3 %>
  </p>

  <p>
    <strong>Importe:</strong>
    <%= @order_detail.importe %>
  </p>

  <p>
    <strong>Kilos:</strong>
    <%= @order_detail.kilos %>
  </p>

  <p>
    <strong>Registrado:</strong>
    <%=  I18n.l @order_detail.created_at, :format => :long if @order_detail.created_at%>
  </p>

  <p>
    <strong>Actualizado:</strong>
    <%= I18n.l @order_detail.updated_at, :format => :long if @order_detail.updated_at%>
  </p>
</div>

<div class="col-md-12">
  <h3 style="float: left !important; margin-top: 30px;">Materiales</h3>

  <table class="table">
    <thead>
      <tr>
        <th>No. de Material</th>
        <th>Descripcion</th>
        <th>Existencia</th>
        <th>Unidad</th>
        <th>Precio</th>
        <th>Moneda</th>
        <th>Configuracion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @order_detail.order_detail_materials.each do |order_detail_material| %> 
        <tr>
          <td><%= link_to order_detail_material.material.id, order_detail_material.material, :class => "btn btn-xs btn-info", id: "underline-link" %></td>
          <td><%= order_detail_material.material.descrip %></td>
          <td><%= order_detail_material.material.existencia %></td>
          <td><%= order_detail_material.material.unidad %></td>
          <td><%= order_detail_material.material.precio %></td>
          <td><%= order_detail_material.material.moneda %></td>
          <td><%= order_detail_material.material.config %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>